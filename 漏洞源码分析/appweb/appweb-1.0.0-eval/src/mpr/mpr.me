/*
    mpr.me -- MakeMe for the MPR
 */

Me.load({
    blend: [ '?ssl' ],

    targets: {
        mpr: {
            configurable: true,
            depends: [ 'libmpr' ],
            uses:    [ 'ssl' ],
        },

        libmpr: {
            type: 'lib',
            depends: [ 'osdep', 'ssl' ],
            sources: [ 'mprLib.c' ],
            headers: [ '*.h' ],
        },
	},

    usage: {
        'mpr.logging':          'Set the session cache size (items)',
        'mpr.ssl.cache':        'Enable application message logging',
        'mpr.ssl.logLevel':     'Starting logging level for SSL messages',
        'mpr.ssl.ticket':       'Enable session resumption via ticketing - client side session caching',
        'mpr.ssl.timeout':      'Session and ticketing duration in seconds',
    },
})
