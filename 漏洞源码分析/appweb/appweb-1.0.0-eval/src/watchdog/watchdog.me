/*
    watchdog.me -- MakeMe file for the watchdog library
 */

Me.load({
    targets: {
        watchdog: {
            enable: 'me.settings.watchdog',
            type: 'exe',
            pname: '${settings.watchdog.name}',
            path: '${BIN}/${settings.watchdog.name}${EXE}',
            rule: 'gui',
            sources: [ 'watchdog.c' ],
            depends: [ 'libmpr' ],
            scripts: { prebuild: "if (me.settings.watchdog) { me.settings.watchdog.name ||= 'watchdog'}" },
        },
	},
})
